InThePocket {
  ^ [
    *(x01) EmptyPocket
    *(x10) PocketContent
  ]
}
EmptyPocket {
  Details! = ""
}

PocketContent {
  Item1 @ [
    * a quill
    * a comb
    * dice
    * a deck of cards
    * a dirty handkerchief
    * 1 cp
    * 2 cp
    * 3 cp
  ]

  Item2 @ [
    * a magnifying glass
    * spectacles
    * an empty vial
    * a smoking pipe
    * 2 sp
    * 3 sp
    * 4 sp
    * 5 sp
  ]

  Item3 @ [
    * a dagger
    * a key
    * a vial with a dark liquid
    * a small flute
    * 1 gp
    * 2 gp
    * a small gem (worth 10 gp)
    * a death threat note
    * a love note
    * a ransom note
    * a passphrase note
  ]
  Items @ [
    * <strong>{{Item1}}</strong>, <strong>{{Item2}}</strong> and <strong>{{Item3}}</strong>
    * <strong>{{Item1}}</strong> and <strong>{{Item2}}</strong>
    * <strong>{{Item1}}</strong>
  ]


  Details! ~ <%
    <small>In the pocket: {{Items}}.</small>%>
}

Equipment { ^ [
    * Gear
  ]
}

